{% extends 'baseAdmin.html.twig' %}

{% block title %}Administration | Mangas Management
{% endblock %}

{% block body %}
	<div class="px-4 sm:px-6 lg:px-8">
		<div class="sm:flex sm:items-center">
			<div class="sm:flex-auto">
				<h1 class="text-base font-semibold leading-6 text-gray-900">Séries</h1>
				<p class="mt-2 text-sm text-gray-700">Une liste de toutes les mangas disponible sur MangaTech.</p>
			</div>
		</div>
		<div class="mt-8 flow-root">
			<div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
				<div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
					<div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 sm:rounded-lg">
						<table class="min-w-full divide-y divide-gray-300">
							<thead class="bg-gray-50">
								<tr>
									<th scope="col" class="w-[10%] py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-6">Numéro de tome</th>
									<th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Série</th>
									<th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Titre</th>
									<th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Prix</th>
									<th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Date de parution</th>
									<th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Date de création</th>
									<th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-6">
										<span class="sr-only">Modifier</span>
										<span class="sr-only">Supprimer</span>
									</th>
								</tr>
							</thead>
							<tbody class="divide-y divide-gray-200 bg-white">
								{% for manga in mangas %}
									<tr>
										<td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-6">{{ manga.volumeNumber }}</td>
										<td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">{{ manga.serie.name }}</td>
										<td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">{{ manga.title ? manga.title : "" }}</td>
										<td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">{{ manga.price|number_format(2) }}</td>
										<td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">{{ manga.editedAt|date("d/m/Y") }}</td>
										<td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">{{ manga.createdAt|date("d/m/Y H:i:s") }}</td>
										<td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6">
											<a href="/admin/serie/{{ manga.serie.id }}/manga/edit/{{ manga.id }}" class="text-indigo-600 hover:text-indigo-900">Modifier
											</a>
										</td>
									</tr>
								{% endfor %}
								<!-- More people... -->
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>

{% endblock %}
{% extends 'baseAdmin.html.twig' %}

{% block title %}
	MangaTech | Admin Series Management
{% endblock %}

{% block body %}

	<div class="example-wrapper">
		<div class="px-4 sm:px-6 lg:px-8">
			<div class="sm:flex sm:items-center">
				<div class="sm:flex-auto">
					<h1 class="text-base font-semibold leading-6 text-gray-900">Series</h1>
					<p class="mt-2 text-sm text-gray-700">Liste des series disponibles sur MangaTech</p>
				</div>
				<div class="mt-4 sm:ml-16 sm:mt-0 sm:flex-none">
					<a href="/admin/serie/new" class="block rounded-md bg-indigo-600 px-3 py-2 text-center text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Ajouter une nouvelle série</a>
				</div>
			</div>
			<div class="mt-8 flow-root">
				<div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
					<div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
						<div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 sm:rounded-lg">
							<table class="min-w-full divide-y divide-gray-300">
								<thead class="bg-gray-50">
									<tr>
										<th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-6">Nom</th>
										<th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Nom original</th>
										<th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Categorie</th>
										<th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Date de création</th>
										<th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Mangas</th>
										<th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-6">
											<span class="sr-only">Modifier</span>
										</th>
									</tr>
								</thead>
								<tbody class="divide-y divide-gray-200 bg-white">
									{% for serie in series %}
										<tr>
											<td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-6">{{ serie.name }}</td>
											<td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">{{ serie.originalName }}</td>
											<td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">{{ serie.category.name }}</td>
											<td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">{{ serie.createdAt|date('d/m/Y H:i:s') }}</td>
											<td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">
												<a href="/admin/serie/{{ serie.id }}/mangas" class="text-indigo-600 hover:text-indigo-900">Liste des mangas de cette série
												</a>
											</td>
											<td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6">
												<a href="/admin/serie/edit/{{ serie.id }}" class="text-indigo-600 hover:text-indigo-900">Modifier<span class="sr-only">, {{ serie.name }}</span>
												</a>
											</td>
										</tr>
									{% endfor %}

									<!-- More people... -->
								</tbody>
							</table>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

{% endblock %}
